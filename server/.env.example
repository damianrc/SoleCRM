# Server Environment Variables

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/solecrm"

# Security Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-at-least-256-bits"
REFRESH_TOKEN_SECRET="your-super-secure-refresh-token-secret-different-from-jwt"

# JWT Configuration
JWT_EXPIRES_IN="15m"  # Short-lived access tokens
REFRESH_TOKEN_EXPIRES_IN="7d"  # Longer-lived refresh tokens

# Development Settings
NODE_ENV="development"
PORT=4000

# Frontend URL for CORS
FRONTEND_URL="http://localhost:3000"

# Development User ID (for development bypass only)
DEV_USER_ID="dev-user-id"

# Security Headers
HELMET_CSP_ENABLED="true"
HELMET_HSTS_ENABLED="true"

# Rate Limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="1000"

# Logging
LOG_LEVEL="info"
LOG_FILE_ENABLED="false"
